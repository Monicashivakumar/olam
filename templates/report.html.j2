<!DOCTYPE html>
<html>
<head>
    <title>Oracle Linux Virtualization Manager Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }
        a {
            text-decoration: none;
            color: #005ca6;
            cursor: pointer;
        }
        a:hover {
            color: #337ab7;
        }
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f0f0f0;
        }
        .section {
            margin: 20px;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .logo {
            text-align: center;
            margin: 20px;
        }
        .logo img {
            width: 200px;
            height: auto;
        }
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <div class="logo">
        <img src="fedora_logo.svg" alt="Oracle Linux Virtualization Manager Logo">
    </div>
    <div class="section">
        <h3><a onclick="toggleSection('general-info')">General Information</a></h3>
              <div id="general-info" class="hidden">
                <!-- ... your existing general info table ... -->
                <table>
                  <tr>
                    <th>Category</th>
                    <th>Count</th>
                    <th>Names</th>
                  </tr>
                  <!-- Your existing rows here -->
                </table>
                <br>
                <table>
                  <tr>
                    <th>Attribute</th>
                    <th>Value</th>
                  </tr>
                  <tr>
                    <td>Self Hosted Engine Deployment</td>
                    <td>{{ 'YES' if self_hosted_engine else 'NO' }}</td>
                  </tr>
                  <tr>
                    <td>OLVM Version</td>
                    <td>{{ olvm_version }}</td>
                  </tr>
                </table>
              </div>
        <h3><a onclick="toggleSection('evnironment-info')">Environment Details</a></h3>
        <div id="general-info" class="hidden">
            <table>
                <tr>
                    <th>Category</th>
                    <th>Count</th>
                    <th>Names</th>
                </tr>
                <tr>
                    <td>KVM Hosts</td>
                    <td>{{ hosts_info.ovirt_hosts | length }}</td>
                    <td>
                        {% if hosts_info.ovirt_hosts %}
                            {{ hosts_info.ovirt_hosts | map(attribute='name') | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Hosts in Maintenance</td>
                    <td>{{ hosts_in_maintenance }}</td>
                    <td>
                        {% if hosts_maintenance_list %}
                            {{ hosts_maintenance_list | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Hosts Non Responsive</td>
                    <td>{{ hosts_non_responsive }}</td>
                    <td>
                        {% if hosts_non_responsive_list %}
                            {{ hosts_non_responsive_list | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Hosts Non Operational</td>
                    <td>{{ hosts_non_operational }}</td>
                    <td>
                        {% if hosts_non_operational_list %}
                            {{ hosts_non_operational_list | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Storage Domains</td>
                    <td>{{ storage_domains_info.ovirt_storage_domains | length }}</td>
                    <td>
                        {% if storage_domains_info.ovirt_storage_domains %}
                            {{ storage_domains_info.ovirt_storage_domains | map(attribute='name') | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Clusters</td>
                    <td>{{ clusters_info.ovirt_clusters | length }}</td>
                    <td>
                        {% if clusters_info.ovirt_clusters %}
                            {{ clusters_info.ovirt_clusters | map(attribute='name') | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Templates</td>
                    <td>{{ templates_info.ovirt_templates | length }}</td>
                    <td>
                        {% if templates_info.ovirt_templates %}
                            {{ templates_info.ovirt_templates | map(attribute='name') | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Virtual Machines</td>
                    <td>{{ vms_info.ovirt_vms | length }}</td>
                    <td>
                        {% if vms_info.ovirt_vms %}
                            {{ vms_info.ovirt_vms | map(attribute='name') | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Active VMs</td>
                    <td>{{ active_vms }}</td>
                    <td>
                        {% if active_vms_list %}
                            {{ active_vms_list | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Inactive VMs</td>
                    <td>{{ inactive_vms }}</td>
                    <td>
                        {% if inactive_vms_list %}
                            {{ inactive_vms_list | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div>
        <h3><a onclick="toggleSection('cluster-info')">Cluster Information</a></h3>
        <div id="cluster-info" class="hidden">
            <h3>Clusters with compatibility version 4.7</h3>
            <table>
                <tr>
                    <th>Name</th>
                </tr>
                {% for cluster in clusters_47 %}
                <tr>
                    <td>{{ cluster.name }}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
        <h3><a onclick="toggleSection('storage-info')">Storage</a></h3>
        <div id="storage-info" class="hidden">
            <table>
                <tr>
                    <th>Storage Domain Name</th>
                    <th>Storage Domain Type</th>
                    <th>Number of Disks</th>
                    <th>% Used</th>
                </tr>
                {% for sd in storage_domains_info.ovirt_storage_domains %}
                <tr>
                    <td>{{ sd.name }}</td>
                    <td>{{ sd.type }}</td>
                    {% if sd.disks is defined %}
                    <td>{{ sd.disks | length }}</td>
                    {% else %}
                    <td>N/A</td>
                    {% endif %}
                    {% if sd.used is defined and sd.available is defined %}
                    <td>{{ ((sd.used / (sd.used + sd.available)) * 100) | round(2) }}%</td>
                    {% else %}
                    <td>N/A</td>
                    {% endif %}
                </tr>
                {% endfor %}
            </table>
        </div>
        <h3><a onclick="toggleSection('vm-info')">Virtual Machines</a></h3>
        <div id="vm-info" class="hidden">
            <table>
                <tr>
                    <th>Category</th>
                    <th>Count</th>
                </tr>
                <tr>
                    <td>Total Virtual Machines</td>
                    <td>{{ vms_info.ovirt_vms | length }}</td>
                </tr>
                <tr>
                    <td>VMs Up</td>
                    <td>{{ active_vms }}</td>
                </tr>
                <tr>
                    <td>VMs Created Last Month</td>
                    <td>{{ vms_created_last_month }}</td>
                </tr>
                <tr>
                    <td>VMs in Shutdown State</td>
                    <td>{{ inactive_vms }}</td>
                </tr>
            </table>
        </div>
        <h3><a onclick="toggleSection('host-info')">Host Information</a></h3>
        <div id="host-info" class="hidden">
            <h3>Hosts and their CPU Models</h3>
            <table>
                <tr>
                    <th>Name</th>
                    <th>CPU Model</th>
                    <th>CPU Type </th>
                    <th>Number of CPUs </th>
                    <th>Manufacturer </th>
                </tr>
                {% for host in hosts_info.ovirt_hosts %}
                <tr>
                    <td>{{ host.name }}</td>
                    <td>{{ host.cpu.name }}</td>
                    <td>{{ host.cpu.type | default('N/A') }}</td>
                    <td>{{ host.cpu.topology.cores| default('N/A') }}</td>
                    <td>{{ host.hardware_information.manufacturer | default('N/A') }}</td>
                </tr>
                {% endfor %}
            </table>
            {% if hosts_info.ovirt_hosts | selectattr('events', 'defined') | list | length > 0 %}
            <h3>Critical Host Events</h3>
            {% for host in hosts_info.ovirt_hosts %}
            {% if host.events is defined %}
            <h4>{{ host.name }}</h4>
            <table>
                <tr>
                    <th>Event Type</th>
                    <th>Description</th>
                    <th>Time</th>
                </tr>
                {% for event in host.events %}
                {% if event.severity == 'error' or event.severity == 'alert' %}
                <tr>
                    <td>{{ event.severity }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.time | default('N/A') }}</td>
                </tr>
                {% endif %}
                {% endfor %}
            </table>
            {% endif %}
            {% endfor %}
            {% endif %}
            <h3>Critical Events</h3>
            <table>
                <tr>
                    <th>Host Name</th>
                    <th>Description</th>
                    <th>Time</th>
                </tr>
                {% for host in hosts_info.ovirt_hosts %}
                {% if host.events is defined %}
                {% for event in (host.events | selectattr('severity', 'equalto', 'error') | sort(attribute='time', reverse=True))[:1] %}
                <tr>
                    <td>{{ host.name }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.time }}</td>
                </tr>
                {% endfor %}
                {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>
    <script>
        function toggleSection(id) {
            var section = document.getElementById(id);
            if (section) {
                if (section.classList.contains('hidden')) {
                    section.classList.remove('hidden');
                } else {
                    section.classList.add('hidden');
                }
            }
        }
    </script>
</body>
</html>
