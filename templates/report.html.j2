<!DOCTYPE html>
<html>
<head>
    <title>Oracle Linux Virtualization Manager Report</title>
    <link rel="stylesheet" href="https://oracle.enterprise.slack.com//static.oracle.com/cdn/fnd/gallery/2507.0.2/images/iconfont/ojuxIconFont.min.css">
    <style>
        body {
            font-family: "Oracle Sans", "Oracle Headline", Arial, Helvetica, sans-serif;
            background: linear-gradient(120deg, #f6f8f9 0%, #e7edf2 100%);
            margin: 0;
            color: #24292f;
            min-height: 100vh;
        }
        .container {
            display: flex;
            height: 100vh;
        }
        .sidebar {
            width: 250px;
            background: #fff;
            box-shadow: 2px 0 10px rgba(44,62,80,0.08);
            padding: 0;
            border-right: 1.5px solid #e0e7ef;
            display: flex;
            flex-direction: column;
        }
        .sidebar .section-title {
            padding: 20px 24px;
            font-size: 1.15em;
            font-weight: 600;
            color: #0057b8;
            border: none;
            background: none;
            text-align: left;
            cursor: pointer;
            transition: background .13s;
        }
        .sidebar .section-title.active,
        .sidebar .section-title:hover {
            background-color: #f0f5fa;
        }
        .main-content {
            flex: 1;
            padding: 36px;
            background: transparent;
            overflow: auto;
        }
        .section-content {
            display: none;
        }
        .section-content.active {
            display: block;
            animation: fadeIn 0.19s;
        }
        .logo {
            text-align: center;
            margin: 34px auto 14px auto;
        }
        .logo img {
            width: 180px;
            height: auto;
            filter: drop-shadow(0 3px 14px rgba(44, 62, 80, 0.08));
        }
        table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            background: #fafbfc;
            margin-bottom: 32px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 1.5px 4px rgba(110, 118, 129, 0.05);
        }
        th, td {
            padding: 10px 14px;
            text-align: left;
        }
        th {
            background-color: #eff3fb;
            color: #0057b8;
            font-weight: 600;
            font-size: 1.05em;
        }
        tr {
            transition: background .2s;
        }
        tr:nth-child(even) {
            background-color: #f5f7fa;
        }
        tr:hover {
            background-color: #e6f0fa;
        }
        @media (max-width: 880px) {
            .container { flex-direction: column; }
            .sidebar { width: 100%; flex-direction: row; border-right: none; border-bottom: 1.5px solid #e0e7ef; }
            .sidebar .section-title { flex: 1; font-size: 1em; padding: 14px 8px; text-align: center; }
            .main-content { padding: 9vw 1vw; }
        }
        @media (max-width: 700px) {
            .main-content { padding: 14px 1vw; }
        }
        @keyframes fadeIn {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }
    </style>
</head>
<body>
<div class="logo">
    <img src="https://docs.oracle.com/en/operating-systems/oracle-linux/obe-style-js/img/oracle_doc_logo.png" alt="Oracle Linux Virtualization Manager Logo">
</div>
<div class="container">
    <div class="sidebar">
        <button class="section-title active" onclick="showSection('general-info')">General Information</button>
        <button class="section-title" onclick="showSection('cluster-info')">Cluster Information</button>
        <button class="section-title" onclick="showSection('storage-info')">Storage</button>
        <button class="section-title" onclick="showSection('vm-info')">Virtual Machines</button>
        <button class="section-title" onclick="showSection('host-info')">Host Information</button>
        <button class="section-title" onclick="showSection('network-info')">Network Information</button>
    </div>
    <div class="main-content">
        <div id="general-info" class="section-content active">
            <h3>General Information</h3>
            <table>
                <tr><th>Category</th><th>Count</th><th>Names</th></tr>
                <tr>
                    <td>KVM Hosts</td>
                    <td>{{ hosts_info.ovirt_hosts | length }}</td>
                    <td>{% if hosts_info.ovirt_hosts %}{{ hosts_info.ovirt_hosts | map(attribute='name') | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
                <tr>
                    <td>Hosts in Maintenance</td>
                    <td>{{ hosts_in_maintenance }}</td>
                    <td>{% if hosts_maintenance_list %}{{ hosts_maintenance_list | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
                <tr>
                    <td>Hosts Non Responsive</td>
                    <td>{{ hosts_non_responsive }}</td>
                    <td>{% if hosts_non_responsive_list %}{{ hosts_non_responsive_list | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
                <tr>
                    <td>Hosts Non Operational</td>
                    <td>{{ hosts_non_operational }}</td>
                    <td>{% if hosts_non_operational_list %}{{ hosts_non_operational_list | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
                <tr>
                    <td>Storage Domains</td>
                    <td>{{ storage_domains_info.ovirt_storage_domains | length }}</td>
                    <td>{% if storage_domains_info.ovirt_storage_domains %}{{ storage_domains_info.ovirt_storage_domains | map(attribute='name') | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
                <tr>
                    <td>Clusters</td>
                    <td>{{ clusters_info.ovirt_clusters | length }}</td>
                    <td>{% if clusters_info.ovirt_clusters %}{{ clusters_info.ovirt_clusters | map(attribute='name') | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
                <tr>
                    <td>Templates</td>
                    <td>{{ templates_info.ovirt_templates | length }}</td>
                    <td>{% if templates_info.ovirt_templates %}{{ templates_info.ovirt_templates | map(attribute='name') | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
                <tr>
                    <td>Virtual Machines</td>
                    <td>{{ vms_info.ovirt_vms | length }}</td>
                    <td>{% if vms_info.ovirt_vms %}{{ vms_info.ovirt_vms | map(attribute='name') | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
                <tr>
                    <td>Active VMs</td>
                    <td>{{ active_vms }}</td>
                    <td>{% if active_vms_list %}{{ active_vms_list | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
                <tr>
                    <td>Inactive VMs</td>
                    <td>{{ inactive_vms }}</td>
                    <td>{% if inactive_vms_list %}{{ inactive_vms_list | join(', ') }}{% else %}N/A{% endif %}</td>
                </tr>
            </table>
            <table>
                <tr><th>Attribute</th><th>Value</th></tr>
                <tr><td>Self Hosted Engine Deployment</td><td>{{ 'YES' if self_hosted_engine else 'NO' }}</td></tr>
                <tr><td>OLVM Version</td><td>{{ olvm_version }}</td></tr>
            </table>
        </div>
        <div id="cluster-info" class="section-content">
            <h3>Clusters with compatibility version 4.7</h3>
            
        </div>
          
        <div id="storage-info" class="section-content">
            <h3>Storage Domains</h3>
            <table>
                <tr>
                    <th>Storage Domain Name</th>
                    <th>Storage Domain Type</th>
                    <th>Number of Disks</th>
                    <th>% Used</th>
                </tr>
                {% for sd in storage_domains_info.ovirt_storage_domains %}
                <tr>
                    <td>{{ sd.name }}</td>
                    <td>{{ sd.type }}</td>
                    {% if sd.disks is defined %}
                    <td>{{ sd.disks | length }}</td>
                    {% else %}<td>N/A</td>{% endif %}
                    {% if sd.used is defined and sd.available is defined %}
                    <td>{{ ((sd.used / (sd.used + sd.available)) * 100) | round(2) }}%</td>
                    {% else %}<td>N/A</td>{% endif %}
                </tr>
                {% endfor %}
            </table>
        </div>
        <div id="vm-info" class="section-content">
           <h3>Virtual Machines</h3>
            <table>
                <tr>
                    <th>Category</th>
                    <th>Count</th>
                    <th>List</th>
                </tr>
                <tr>
                    <td>Total Virtual Machines</td>
                    <td>{{ vms_info.ovirt_vms | length }}</td>
                    <td>
                        {% if vms_info.ovirt_vms %}
                            {{ vms_info.ovirt_vms | map(attribute='name') | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>VMs Up</td>
                    <td>{{ active_vms }}</td>
                    <td>
                        {% if active_vms_list %}
                            {{ active_vms_list | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>VMs Created Last Month</td>
                    <td>{{ vms_created_last_month }}</td>
                    <td>
                        {% if vms_created_last_month_list %}
                            {{ vms_created_last_month_list | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>VMs in Shutdown State</td>
                    <td>{{ inactive_vms }}</td>
                    <td>
                        {% if inactive_vms_list %}
                            {{ inactive_vms_list | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>VMs with HA Enabled</td>
                    <td>
                        {% if ha_enabled_vms_list %}
                            {{ ha_enabled_vms_list | length }}
                        {% else %}
                            0
                        {% endif %}
                    </td>
                    <td>
                        {% if ha_enabled_vms_list %}
                            {{ ha_enabled_vms_list | join(', ') }}
                        {% else %}
                            None
                        {% endif %}
                    </td>
                    </tr>
                    <tr>
                    <td>VMs with OS Oracle Linux 8.x</td>
                    <td>{{  oracle_linux_8_vms_list | length }}</td>
                    <td>
                        {% if  oracle_linux_8_vms_list %}
                            {{  oracle_linux_8_vms_list | join(', ') }}
                        {% else %}
                            None
                        {% endif %}
                    </td>
                </tr>
                </tr>
            </table>
        </div>
        <div id="host-info" class="section-content">
            <h3>Hosts and their CPU Models</h3>
            <table>
                <tr>
                    <th>Name</th>
                    <th>CPU Model</th>
                    <th>CPU Type</th>
                    <th>Number of CPUs</th>
                    <th>Manufacturer</th>
                    <th>VDSM Version</th>
                </tr>
                {% for host in hosts_info.ovirt_hosts %}
                <tr>
                    <td>{{ host.name }}</td>
                    <td>{{ host.cpu.name }}</td>
                    <td>{{ host.cpu.type | default('N/A') }}</td>
                    <td>{{ host.cpu.topology.cores | default('N/A') }}</td>
                    <td>{{ host.hardware_information.manufacturer | default('N/A') }}</td>
                    <td>{{ host.version.full_version | default('N/A') }}</td>
                </tr>
                {% endfor %}
            </table>
            <h3>Host OS &amp; Security Configuration</h3>
            <table>
                <tr>
                    <th>Host</th>
                    <th>Status</th>
                    <th>SELinux Mode</th>
                    <th>Kernel Cmdline</th>
                    <th>Kdump</th>
                </tr>
                {% for host in hosts_info.ovirt_hosts %}
                <tr>
                    <td>{{ host.name }}</td>
                    <td>{{ host.status | default('N/A') }}</td>
                    <td>{{ host.se_linux.mode | default('N/A') }}</td>
                    <td>{{ host.os.reported_kernel_cmdline | default('N/A') }}</td>
                    <td>{{ host.kdump_status | default('N/A') }}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
        <div id="network-info" class="section-content">
        <h3>Network Information</h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Data Center</th>
                <th>VLAN ID</th>
                <th>Usage</th>
            </tr>
            {% if networks_info.ovirt_networks is defined and networks_info.ovirt_networks|length > 0 %}
                {% for net in networks_info.ovirt_networks %}
                <tr>
                    <td>
                        {% if net is defined and net.name is defined %}
                            {{ net.name }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                    <td>
                      {% if net.data_center is defined and net.data_center.id is defined and datacenter_id_to_name is defined and net.data_center.id in datacenter_id_to_name %}
                        {{ datacenter_id_to_name[net.data_center.id] }}
                      {% else %}
                        N/A
                      {% endif %}
                    </td>
                    <td>
                        {% if net.vlan is defined and net.vlan.id is defined %}
                            {{ net.vlan.id }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                    <td>
                        {% if net.usages is defined %}
                            {{ net.usages | join(', ') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            {% else %}
                <tr><td colspan="5" style="text-align:center;color:#a6a6a6;font-style:italic;">No network data available</td></tr>
            {% endif %}
        </table>

</div>
    </div>
</div>
<script>
    function showSection(sectionId) {
        document.querySelectorAll('.section-title').forEach(function(btn) { btn.classList.remove('active'); });
        document.querySelectorAll('.section-content').forEach(function(sec) { sec.classList.remove('active'); });
        var sidebarIndex = ['general-info', 'cluster-info', 'storage-info', 'vm-info', 'host-info', 'network-info'].indexOf(sectionId);
        if (sidebarIndex >= 0) {
            document.querySelectorAll('.section-title')[sidebarIndex].classList.add('active');
        }
        document.getElementById(sectionId).classList.add('active');
    }
</script>
</body>
</html>
